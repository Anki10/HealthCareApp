<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backd"
    tools:context="com.winklix.indu.healthcareapp.activities.LoginPinActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/theme_trans_white"
        android:layout_margin="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please Enter Login Pin For Login App.."
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/pin_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Login Pin"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:inputType="number"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/submit_pin_btn"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Submit"
                    android:layout_weight="1"
                    android:background="@color/theme_transparent"
                    android:layout_marginLeft="5dp"/>

                <Button
                    android:id="@+id/cancel_pin_et"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:background="@color/theme_transparent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
