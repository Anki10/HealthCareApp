<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backs"
    android:layout_gravity="center"
    tools:context="com.winklix.indu.healthcareapp.activities.NearByServiceCenter_Activity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sharing_dr_recy_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:padding="5dp"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context="com.app.winklix.service_engg.MapsActivityMain" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id ="@+id/payemt_process"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="PAYMENT"
            android:background="@drawable/side_nav_bar"
            android:textColor="@color/black"
            android:onClick="onClickEvent"
            android:textSize="15sp"
            android:layout_margin="20dp" />
    </LinearLayout>

</LinearLayout>
