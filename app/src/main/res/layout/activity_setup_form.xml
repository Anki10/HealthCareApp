<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backd"
    tools:context="com.winklix.indu.healthcareapp.activities.SetupFormActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setup Detail"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/theme_trans_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/setup_drname_et"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="12dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="Name"
                    android:textColor="@color/black"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/setup_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="12dp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:hint="Email"
                    android:textColor="@color/black"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/setup_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="12dp"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:hint="Mobile Number"
                    android:textColor="@color/black"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/setup_clinic_et"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="12dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="Clinic Name"
                    android:textColor="@color/black"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/setup_address_et"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="12dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="Address"
                    android:textColor="@color/black"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/setup_type_et"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="12dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="Setup Type"
                    android:textColor="@color/black"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/setup_detail_et"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="12dp"
                    android:inputType="text"
                    android:hint="Setup Detail"
                    android:textColor="@color/black"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/setup_submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Submit"
                android:layout_gravity="center"
                android:background="@color/theme_transparent"
                android:padding="10dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
