            android:id="@+id/book_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Book Now"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>
    <LinearLayout
